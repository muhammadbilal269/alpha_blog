

<h2 align="center">LIST OF ARTICLES</h2>
<% @articles.each do |article| %>
<div class="container">
<div class="row">
<div class="col-md-12 pb-3 m-3">
	<div class="card card-lg bg-light col-xl-12" style = "height:10rem ">
		<div class="article-title">
			<%=  link_to article.TITLE , article_path(article) %>
		</div>
		
		<div class="article-body">
			<%= truncate(article.DESCRIPTION, length:100) %>
		</div>

		<div class="article-actions">


	<%= link_to "Edit" , edit_article_path(article), class: "btn btn-xs btn-success" %>

	<%= link_to "Delete" , article_path(article), method: :destroy,
	data: {confirm: "are you sure you want to delete this article ?"} , class: "btn btn-xs btn-danger" %>
</div>
</div>
</div>
</div>
</div>
	<% end %>


