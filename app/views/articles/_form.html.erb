<%= render 'shared/errors', obj: @article %>

<div class="row">
	<div class="col-md-12">
<%= form_for(@article, :html => {class: "form-horizontal", role: "form"})  do  |f| %>
<div class="form-group">
	<div class="control-lable col-sm-2">
	<%= f.label :TITLE %>
</div>
<div class="col-sm-12" >
	<%= f.text_field :TITLE  , class: "form-control" , placeholder: "Title of artice", autofocus: true %>
</div>
</div>

 <div class="form-group">
 	<div class="control-lable col-sm-2">
	<%= f.label :DESCRIPTION %>
</div>
<div class="col-sm-12">
	<%= f.text_area :DESCRIPTION , class: "form-control", rows: 5 , placeholder: "body of article", autofocus: true %>
</div>
</div>

<div class="form-group">
	<div class="col-md-10">
	<%= f.submit :submit , class: "btn btn-primary" %>
</div>
</div>
<% end %>


<div class="col-xs-4 col-xs-offset-4">
[<%= link_to "Cancel the request and back to list of articles" , articles_path %>]
</div>
</div>
</div>
